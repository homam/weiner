@import 'nib'

body {
}

.modal-container {
  position:fixed;
  top:0;left:0;right:0;bottom:0;
  display:none;
  perspective: 1300px;
  transform-style: preserve-3d;
  .show-modal & {
    display:block;
  }
}

article {
  transition: -webkit-filter 500ms ease;
}

.show-modal {
  overflow:hidden;
  article {
    -webkit-filter: blur(2px);
  }
}

.modal {
  position: fixed;
  top: 10%;
  left: 50%;
  width: 500px;
  margin-left: -250px;
  z-index:100;


  transform:  rotateX(90deg) translateY(100%);
  transform-origin: 0 100%;
  opacity: 0;
  transition: all 500ms ease;

  .show-modal & {
    transform: translateY(0%) rotateX(0deg);
    opacity: 1;
  }
}